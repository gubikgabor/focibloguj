<h3><%= t('comment')%></h3>
<% @post.comments.each do |comment| %>
    <div class="well">
        <p><strong><%= comment.username %></strong>: <%= comment.body %>
            <%= link_to '[X]', [comment.post,comment], method: :delete, data: {confirm: t('confirm') }%>
        </p>
    </div>
<% end %>