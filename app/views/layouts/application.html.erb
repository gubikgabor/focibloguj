<!DOCTYPE html>
<html>
  <head>
    <title>Fociblog</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>

    <section>
     <div id="flash">
        <% flash.each do |key, value| %>
         <div class="flash <%= key %>"><%= value %></div>
       <% end %>
    </div>     
   </section>

  <nav class="navbar navbar-default-bg:blue">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Foci blog</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "Főoldal", home_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <% if signed_in? %>
              <div class="well">
              Bejelentkezve: <%= current_user.email %> <%= button_to 'Kijelentkezés', sign_out_path, method: :delete, class: 'btn btn-primary' %>
              </div>
            <% else %>
              <%= link_to 'Bejelentkezés', sign_in_path %>
            <% end %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Új poszt", new_post_path %></li>
        </ul>
        
      </div>
    </div>
  </nav>
  <div class="container">
  <%= yield %>
  </div>
  </body>
</html>